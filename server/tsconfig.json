{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "inlineSourceMap": true,
    "outDir": "./build",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "exclude": ["node_modules", "./build"]
}
